# Server Configuration
NODE_ENV=development
PORT=5001

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/shaaka

# JWT Configuration
JWT_ACCESS_SECRET=your-access-token-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-token-secret-key-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# MSG91 Configuration (OTP Service)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=SHAAKA
MSG91_TEMPLATE_ID=your-msg91-template-id
MSG91_OTP_TEMPLATE_ID=your-msg91-otp-template-id
# Set to 'true' to send real OTPs even in development mode
ENABLE_REAL_OTP=false

# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# App Configuration
FRONTEND_URL=http://localhost:3000
DELIVERY_RADIUS_KM=25
MIN_ORDER_VALUE=200
FREE_DELIVERY_THRESHOLD=500
DELIVERY_CHARGE=40
COD_ENABLED=true

# Hyderabad Center Coordinates (for delivery radius)
HYDERABAD_LAT=17.385044
HYDERABAD_LNG=78.486671

# Rate Limiting
OTP_RATE_LIMIT_WINDOW_MS=900000
OTP_RATE_LIMIT_MAX=5
